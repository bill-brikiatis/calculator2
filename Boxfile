--- 
global: 
  env: 
    - 
      LARAVEL_ENV: production
web1: 
  after_build: 
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install"
  after_deploy: 
    - "rm -f app/storage/cache/*"
    - "rm -f app/storage/views/*"
    - "php artisan migrate"
    - "php artisan db:seed --class=FrostTableSeeder"
    - "php artisan db:seed --class=GardenerTableSeeder"
  document_root: public
  name: "application name"
  php_extensions: 
    - mcrypt
    - mysqli
    - mysql
    - mbstring
    - zip
    - pdo_mysql
    - mcrypt
    - memcached
  php_version: "5.4.14"
  shared_writable_dirs: 
    - /app/storage/cache
    - /app/storage/logs
    - /app/storage/meta
    - /app/storage/sessions
    - /app/storage/views
